<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Rating bar -->

    <style name="smallRatingBar" parent="@android:style/Widget.RatingBar">

    </style>

    <!--Tutor sign up-->

    <style name="signUpSheet">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="signUpSheetEdits">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="signUpButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <!-- Card -->
    <style name="card">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/card_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/card_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/card_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/card_vertical_padding</item>
        <item name="android:background">@android:color/white</item>
    </style>




</resources>
